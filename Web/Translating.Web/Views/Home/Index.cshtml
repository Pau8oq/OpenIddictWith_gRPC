@model IEnumerable<Translating.Web.Domain.Models.TranslationModel>
@{
    ViewData["Title"] = "Home Page";
}

<a class="btn btn-primary" asp-action="Create">create new</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Word</th>
            <th>Trnslation</th>
            <th>Language</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.EnglishWord</td>
                <td>@item.TranslationText</td>
                <td>@item.TranslationLanguage.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Home" asp-route-id=@item.Id>
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
